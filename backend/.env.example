# ORIGIN Learning Platform - Environment Variables
# Copy this file to .env and fill in the values

# Application
PROJECT_NAME=ORIGIN Learning Platform
VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
API_V1_STR=/api/v1
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=origin
POSTGRES_PASSWORD=origin_dev_password
POSTGRES_DB=origin_db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Celery
CELERY_BROKER=redis://localhost:6379/0
CELERY_BACKEND=redis://localhost:6379/0

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=origin-embeddings

# OpenAI (for LLM features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# GitHub API (for portfolio analysis)
GITHUB_TOKEN=your-github-token

# LinkedIn API (for portfolio analysis)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Firebase (for real-time chat and notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# Apple Push Notification Service
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.origin.learning
APNS_KEY_PATH=/path/to/apns-key.p8

# AWS (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=origin-uploads

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn

# Stripe (payment processing)
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@origin-learning.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# JWT Tokens
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_B2B_FEATURES=true
ENABLE_ANALYTICS=true
