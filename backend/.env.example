# Project Configuration
PROJECT_NAME=ORIGIN Learning Platform
VERSION=0.1.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET_AT_LEAST_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=origin
POSTGRES_PASSWORD=origin_dev_password
POSTGRES_DB=origin_db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery (optional, defaults to Redis URL)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# GitHub API
GITHUB_TOKEN=your_github_token_here

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# Firebase (for real-time chat)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Supabase (alternative to Firebase)
# SUPABASE_URL=your_supabase_url
# SUPABASE_KEY=your_supabase_key

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=origin-attachments
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_ATTEMPTS=5
AUTH_RATE_LIMIT_WINDOW_MINUTES=15
